{
  "manifest_version": 3,
  "name": "Experimentation Local Interface",
  "version": "1.0.0",
  "description": "Local development interface for web experiments with hot reloading",
  "author": "Brian Norman",
  "homepage_url": "https://github.com/briannorman/eli",
  "privacy_policy": "https://briannorman.github.io/eli/privacy-policy.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Experimentation Local Interface",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
